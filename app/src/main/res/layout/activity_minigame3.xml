<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="5"
        android:id="@+id/countDown"
        android:textStyle="bold"
        android:textSize="65dp"
        android:textColor="#010101"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/memorizeText"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Memorize the numbers..."
        android:id="@+id/memorizeText"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_marginTop="61dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#010101" />

    <Button
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:text="Start!"
        android:id="@+id/startButton"
        android:background="#3eff5b"
        android:textColor="#ffffff"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="start"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="1"
        android:id="@+id/number1TextView"
        android:layout_below="@+id/memorizeText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp"
        android:textColor="#18acff"
        android:textStyle="bold"
        android:visibility="invisible"
        android:textSize="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="2"
        android:id="@+id/number2TextView"
        android:layout_below="@+id/number1TextView"
        android:layout_alignParentStart="true"
        android:textColor="#dc3dff"
        android:textStyle="bold"
        android:visibility="invisible"
        android:textSize="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="3"
        android:id="@+id/number3TextView"
        android:layout_above="@+id/number2TextView"
        android:layout_centerHorizontal="true"
        android:textColor="#2fff41"
        android:textStyle="bold"
        android:visibility="invisible"
        android:textSize="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="4"
        android:id="@+id/number4TextView"
        android:layout_alignTop="@+id/number2TextView"
        android:layout_centerHorizontal="true"
        android:textColor="#ff7727"
        android:textStyle="bold"
        android:visibility="invisible"
        android:textSize="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="5"
        android:id="@+id/number5TextView"
        android:textColor="#ff2328"
        android:textStyle="bold"
        android:layout_above="@+id/number6TextView"
        android:layout_alignParentEnd="true"
        android:visibility="invisible"
        android:textSize="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="6"
        android:id="@+id/number6TextView"
        android:layout_alignTop="@+id/number4TextView"
        android:layout_alignParentEnd="true"
        android:textColor="#d0be0d"
        android:textStyle="bold"
        android:visibility="invisible"
        android:textSize="35dp" />

    <Button
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:id="@+id/button"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:onClick="bPressed"
        android:background="#ff0000"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:id="@+id/button2"
        android:layout_below="@+id/button"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:onClick="b2Pressed"
        android:background="#ff0000"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:id="@+id/button3"
        android:layout_below="@+id/button2"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:onClick="b3Pressed"
        android:background="#ff0000"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:id="@+id/button4"
        android:layout_below="@+id/button3"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:onClick="b4Pressed"
        android:background="#ff0000"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:text="Done"
        android:id="@+id/doneButton"
        android:background="#3eff5b"
        android:textColor="#ffffff"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textStyle="bold"
        android:onClick="check"
        android:layout_below="@+id/button4"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

</RelativeLayout>
