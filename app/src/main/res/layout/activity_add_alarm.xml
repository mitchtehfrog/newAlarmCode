<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"

    tools:context="edu.elon.cs.gamealarm.AddAlarmActivity"
    android:background="#ddfabb">

        <TextView
            android:id="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click on hours and minutes to set new alarm:"
            android:textSize="16dp"
            android:textColor="#343434"
            />
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hourspinner"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_below="@id/heading"
            android:background="#ffe2e4"
            />

        <TextView
            android:text=":"
            android:textSize="100dp"
            android:textColor="#343434"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/hourspinner"
            android:layout_below="@id/heading"
            android:id="@+id/colon" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/minutespinner"
            android:layout_toRightOf="@+id/colon"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_below="@id/heading"
            android:background="#ffe2e4"
            />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textSize="50dp"
        android:textColor="#ffe2e4"
        android:id="@+id/add_alarm_button"
        android:onClick="onSaveClick"
        android:layout_weight="1"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="164dp"
        android:background="#abcca3"
        />

</RelativeLayout>
